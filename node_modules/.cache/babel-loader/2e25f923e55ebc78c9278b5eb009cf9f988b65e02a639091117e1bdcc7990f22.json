{"ast":null,"code":"import { ref, computed, onMounted } from 'vue';\nimport { useWardrobeStore } from '@/stores/wardrobe';\nimport ClothingItem from './ClothingItem.vue';\nimport { useToast } from '@/composables/useToast';\n\n// 初始化\n\nexport default {\n  __name: 'WardrobeSection',\n  setup: function setup(__props, _ref) {\n    var __expose = _ref.expose;\n    __expose();\n    var wardrobeStore = useWardrobeStore();\n    var _useToast = useToast(),\n      showToast = _useToast.showToast;\n    var forceUpdateKey = ref(0);\n    var loading = ref(false);\n    var error = ref(null);\n    var searchKeyword = ref('');\n    var isSearchMode = ref(false);\n    var searchResults = ref([]);\n    var selectedCategory = ref(null);\n    var isDrawerOpen = ref(false);\n\n    // 计算属性\n    var categories = computed(function () {\n      return wardrobeStore.categories;\n    });\n    var recentlyAddedItems = computed(function () {\n      return wardrobeStore.recentlyAddedItems;\n    });\n\n    // 方法\n    function initializeData() {\n      loading.value = true;\n      error.value = null;\n      try {\n        wardrobeStore.fetchCategories();\n        wardrobeStore.fetchItems();\n      } catch (err) {\n        error.value = '加载数据失败，请重试';\n        console.error(err);\n      } finally {\n        loading.value = false;\n      }\n    }\n    function handleSearch() {\n      if (!searchKeyword.value.trim()) {\n        isSearchMode.value = false;\n        searchResults.value = [];\n        return;\n      }\n      isSearchMode.value = true;\n      searchResults.value = wardrobeStore.searchItems(searchKeyword.value);\n      selectedCategory.value = 'search';\n      isDrawerOpen.value = true;\n    }\n    function viewCategory(categoryId) {\n      selectedCategory.value = categoryId;\n      isSearchMode.value = false;\n      isDrawerOpen.value = true;\n    }\n    function closeDrawer() {\n      if (isSearchMode.value) {\n        isSearchMode.value = false;\n        searchResults.value = [];\n      } else {\n        wardrobeStore.clearSelectedCategory();\n      }\n      isDrawerOpen.value = false;\n    }\n    function viewItemDetail(item) {\n      // 查看衣物详情的逻辑\n      console.log(\"查看衣物详情:\", item);\n      // 这里可以添加导航到详情页面的逻辑\n    }\n    function editItem(item) {\n      // 编辑衣物的逻辑\n      console.log(\"编辑衣物:\", item);\n      showToast(\"\\u7F16\\u8F91 \".concat(item.name), 'info');\n      // 这里可以添加编辑衣物的逻辑\n    }\n    function shareItem(item) {\n      // 分享衣物的逻辑\n      console.log(\"分享衣物:\", item);\n      showToast(\"\\u5206\\u4EAB \".concat(item.name), 'success');\n      // 这里可以添加分享衣物的逻辑\n    }\n    function viewAllCategories() {\n      // 查看所有分类的逻辑\n      console.log(\"查看所有分类\");\n      // 如果当前是搜索模式，先退出搜索模式\n      if (isSearchMode.value) {\n        isSearchMode.value = false;\n        searchResults.value = [];\n      }\n      // 设置一个特殊值表示查看全部\n      wardrobeStore.setSelectedCategory(\"all\");\n      isDrawerOpen.value = true;\n    }\n    function getCategoryItems(categoryId) {\n      var _wardrobeStore$itemsB;\n      if (isSearchMode.value) return searchResults.value;\n      if (categoryId === \"all\") {\n        // 计算所有分类的衣物总数\n        var totalCount = 0;\n        Object.values(wardrobeStore.itemsByCategory).forEach(function (items) {\n          totalCount += items.length;\n        });\n        return totalCount;\n      }\n      return ((_wardrobeStore$itemsB = wardrobeStore.itemsByCategory[categoryId]) === null || _wardrobeStore$itemsB === void 0 ? void 0 : _wardrobeStore$itemsB.length) || 0;\n    }\n    function getCategoryItemCount(categoryId) {\n      var _wardrobeStore$itemsB2;\n      if (isSearchMode.value) return searchResults.value.length;\n      if (categoryId === \"all\") {\n        // 计算所有分类的衣物总数\n        var totalCount = 0;\n        Object.values(wardrobeStore.itemsByCategory).forEach(function (items) {\n          totalCount += items.length;\n        });\n        return totalCount;\n      }\n      return ((_wardrobeStore$itemsB2 = wardrobeStore.itemsByCategory[categoryId]) === null || _wardrobeStore$itemsB2 === void 0 ? void 0 : _wardrobeStore$itemsB2.length) || 0;\n    }\n    function getSelectedCategoryName() {\n      if (isSearchMode.value) return '搜索结果';\n      if (selectedCategory.value === \"all\") return '全部衣物';\n      var category = categories.value.find(function (c) {\n        return c.id === selectedCategory.value;\n      });\n      return category ? category.name : '未分类';\n    }\n    function toggleFavorite(item) {\n      wardrobeStore.toggleFavorite(item.id);\n      showToast(item.favorite ? '已取消收藏' : '已添加到收藏', 'success');\n    }\n\n    // 动画钩子\n    function beforeEnter(el) {\n      console.log('进入动画开始: beforeEnter');\n    }\n    function afterEnter(el) {\n      console.log('进入动画结束: afterEnter');\n    }\n    function beforeLeave(el) {\n      console.log('离开动画开始: beforeLeave');\n    }\n    function afterLeave(el) {\n      console.log('离开动画结束: afterLeave');\n    }\n\n    // 生命周期\n    onMounted(function () {\n      initializeData();\n    });\n    var __returned__ = {\n      wardrobeStore: wardrobeStore,\n      showToast: showToast,\n      forceUpdateKey: forceUpdateKey,\n      loading: loading,\n      error: error,\n      searchKeyword: searchKeyword,\n      isSearchMode: isSearchMode,\n      searchResults: searchResults,\n      selectedCategory: selectedCategory,\n      isDrawerOpen: isDrawerOpen,\n      categories: categories,\n      recentlyAddedItems: recentlyAddedItems,\n      initializeData: initializeData,\n      handleSearch: handleSearch,\n      viewCategory: viewCategory,\n      closeDrawer: closeDrawer,\n      viewItemDetail: viewItemDetail,\n      editItem: editItem,\n      shareItem: shareItem,\n      viewAllCategories: viewAllCategories,\n      getCategoryItems: getCategoryItems,\n      getCategoryItemCount: getCategoryItemCount,\n      getSelectedCategoryName: getSelectedCategoryName,\n      toggleFavorite: toggleFavorite,\n      beforeEnter: beforeEnter,\n      afterEnter: afterEnter,\n      beforeLeave: beforeLeave,\n      afterLeave: afterLeave,\n      ref: ref,\n      computed: computed,\n      onMounted: onMounted,\n      get useWardrobeStore() {\n        return useWardrobeStore;\n      },\n      ClothingItem: ClothingItem,\n      get useToast() {\n        return useToast;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","computed","onMounted","useWardrobeStore","ClothingItem","useToast","wardrobeStore","_useToast","showToast","forceUpdateKey","loading","error","searchKeyword","isSearchMode","searchResults","selectedCategory","isDrawerOpen","categories","recentlyAddedItems","initializeData","value","fetchCategories","fetchItems","err","console","handleSearch","trim","searchItems","viewCategory","categoryId","closeDrawer","clearSelectedCategory","viewItemDetail","item","log","editItem","concat","name","shareItem","viewAllCategories","setSelectedCategory","getCategoryItems","_wardrobeStore$itemsB","totalCount","Object","values","itemsByCategory","forEach","items","length","getCategoryItemCount","_wardrobeStore$itemsB2","getSelectedCategoryName","category","find","c","id","toggleFavorite","favorite","beforeEnter","el","afterEnter","beforeLeave","afterLeave"],"sources":["/Users/sunxiaokai/Desktop/stylevault-vue-project/src/components/features/wardrobe/WardrobeSection.vue"],"sourcesContent":["<template>\n<section :key=\"forceUpdateKey\">\n\n\n  <!-- 搜索和上传区 -->\n  <div class=\"relative overflow-hidden mb-8\">\n    <div class=\"absolute inset-0 bg-gradient-to-r from-primary/90 to-secondary/90 transform skew-y-3\"></div>\n    <div class=\"absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30\"></div>\n    <div class=\"container mx-auto px-4 py-12 md:py-20 relative z-10\">\n      <div class=\"max-w-2xl\">\n        <h2 class=\"text-[clamp(1.8rem,4vw,3rem)] font-bold text-white leading-tight mb-3\">打造你的专属衣橱</h2>\n        <p class=\"text-white/90 text-balance text-[clamp(1rem,1.5vw,1.1rem)] mb-8 max-w-xl\">智能管理衣物，轻松搭配，展现独特风格，让每一天都充满时尚感</p>\n        <div class=\"relative mb-6 group\">\n          <div class=\"absolute inset-0 bg-white/20 rounded-2xl blur-md transform scale-105 opacity-0 group-hover:opacity-100 transition-all duration-300\"></div>\n          <input\n            type=\"text\"\n            placeholder=\"搜索衣物、风格或场合...\"\n            class=\"w-full py-4 px-6 pr-14 rounded-2xl shadow-medium focus:outline-none focus:ring-2 focus:ring-white/30 transition-all bg-white/10 backdrop-blur border border-white/20 text-white placeholder-white/60 text-base\"\n            v-model=\"searchKeyword\"\n            @keyup.enter=\"handleSearch\"\n          >\n          <font-awesome-icon :icon=\"['fas', 'search']\" class=\"absolute right-5 top-1/2 -translate-y-1/2 text-white/70 group-hover:text-white transition-colors text-lg\" />\n        </div>\n        <div class=\"flex flex-wrap gap-4\">\n          <button class=\"bg-white text-primary hover:bg-neutral-100 font-medium py-3 px-8 rounded-2xl shadow-medium transition-all flex items-center space-x-2 group\" @click=\"$emit('showUpload')\">\n            <font-awesome-icon :icon=\"['fas', 'plus-circle']\" class=\"group-hover:scale-110 transition-transform\" />\n            <span>添加新衣物</span>\n          </button>\n          <button class=\"bg-white/10 hover:bg-white/20 backdrop-blur text-white font-medium py-3 px-8 rounded-2xl shadow-medium transition-all flex items-center space-x-2\">\n            <font-awesome-icon :icon=\"['fas', 'magic']\" />\n            <span>智能搭配</span>\n          </button>\n        </div>\n      </div>\n    </div>\n    <div class=\"absolute -bottom-10 -right-10 w-64 h-64 bg-white/5 rounded-full\"></div>\n    <div class=\"absolute top-1/3 right-1/4 w-32 h-32 bg-white/5 rounded-full\"></div>\n  </div>\n\n\n\n  <!-- 加载状态 -->\n  <div v-if=\"loading\" class=\"container mx-auto px-4 mb-12\">\n    <div class=\"flex justify-center items-center h-64\">\n      <div class=\"animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-primary\"></div>\n    </div>\n  </div>\n\n  <!-- 错误状态 -->\n  <div v-if=\"error\" class=\"container mx-auto px-4 mb-12\">\n    <div class=\"bg-red-50 border-l-4 border-red-500 p-4 rounded\">\n      <div class=\"flex\">\n        <div class=\"flex-shrink-0\">\n          <font-awesome-icon :icon=\"['fas', 'exclamation-circle']\" class=\"h-5 w-5 text-red-400\" />\n        </div>\n        <div class=\"ml-3\">\n          <p class=\"text-sm text-red-700\">\n            {{ error }}\n          </p>\n        </div>\n      </div>\n    </div>\n  </div>\n\n  <!-- 分类展示区 -->\n  <div v-if=\"!loading && !error\" class=\"container mx-auto px-4 mb-12\">\n    <div class=\"flex justify-between items-center mb-6\">\n      <h2 class=\"text-2xl font-bold text-gray-800\">我的衣橱</h2>\n      <button class=\"text-primary hover:text-primary-dark transition-colors flex items-center space-x-1\">\n        <span>查看全部</span>\n        <font-awesome-icon :icon=\"['fas', 'arrow-right']\" />\n      </button>\n    </div>\n\n    <!-- 分类网格 -->\n    <div class=\"grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4\">\n      <div\n        v-for=\"category in categories\"\n        :key=\"category.id\"\n        class=\"bg-white rounded-xl overflow-hidden shadow-soft hover:shadow-medium transition-all duration-300 cursor-pointer group\"\n        @click=\"viewCategory(category.id)\"\n      >\n        <div class=\"aspect-square overflow-hidden relative\">\n          <div class=\"absolute inset-0 bg-gradient-to-br from-transparent to-black/5 z-10\"></div>\n          <img\n            :src=\"category.image || `https://picsum.photos/seed/${category.id}/300/300`\"\n            :alt=\"category.name\"\n            class=\"w-full h-full object-cover group-hover:scale-105 transition-transform duration-500\"\n          >\n          <div class=\"absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-3 z-20\">\n            <h3 class=\"text-white font-medium\">{{ category.name }}</h3>\n            <p class=\"text-white/80 text-xs\">{{ getCategoryItemCount(category.id) }} 件衣物</p>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n\n  <!-- 最近添加 -->\n  <div v-if=\"!loading && !error\" class=\"container mx-auto px-4 mb-12\">\n    <div class=\"flex justify-between items-center mb-6\">\n      <h2 class=\"text-2xl font-bold text-gray-800\">最近添加</h2>\n      <button class=\"text-primary hover:text-primary-dark transition-colors flex items-center space-x-1\">\n        <span>查看全部</span>\n        <font-awesome-icon :icon=\"['fas', 'arrow-right']\" />\n      </button>\n    </div>\n\n    <div class=\"grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4\">\n      <ClothingItem\n        v-for=\"item in recentlyAddedItems\"\n        :key=\"item.id\"\n        :item=\"item\"\n        @like=\"toggleFavorite(item)\"\n      />\n      <!-- 添加更多 -->\n      <div class=\"group relative\">\n        <div class=\"aspect-square bg-white rounded-xl overflow-hidden shadow-soft hover:shadow-medium transition-all duration-300 mb-3 border-2 border-dashed border-neutral-200 flex items-center justify-center\">\n          <div class=\"text-center p-6 group-hover:scale-110 transition-transform\">\n            <div class=\"w-14 h-14 mx-auto bg-neutral-100 rounded-full flex items-center justify-center mb-3\">\n              <font-awesome-icon :icon=\"['fas', 'plus']\" class=\"text-neutral-400 text-xl\" />\n            </div>\n            <p class=\"text-neutral-500 font-medium\">添加更多衣物</p>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n\n  <!-- 分类结果展示 - 全屏覆盖层 -->\n  <transition name=\"fade\">\n    <div v-if=\"isDrawerOpen\" class=\"fixed inset-0 bg-black bg-opacity-50 z-40\" @click=\"closeDrawer\"></div>\n  </transition>\n\n  <!-- 分类结果展示 - 优雅卡片 -->\n  <transition\n    enter-active-class=\"animated slide-up-enter-active\"\n    leave-active-class=\"animated slide-up-leave-active\"\n    enter-from-class=\"slide-up-enter-from\"\n    enter-to-class=\"slide-up-enter-to\"\n    leave-from-class=\"slide-up-leave-from\"\n    leave-to-class=\"slide-up-leave-to\"\n    :duration=\"{ enter: 300, leave: 200 }\"\n    @before-enter=\"beforeEnter\"\n    @after-enter=\"afterEnter\"\n    @before-leave=\"beforeLeave\"\n    @after-leave=\"afterLeave\">\n    <div v-if=\"isDrawerOpen\" class=\"fixed inset-x-4 bottom-4 top-20 bg-white rounded-2xl shadow-2xl z-50 overflow-hidden flex flex-col transform origin-bottom\">\n      <!-- 顶部导航栏 -->\n      <div class=\"bg-gradient-to-r from-primary to-secondary p-5 text-white rounded-t-2xl shadow-lg\">\n        <div class=\"flex items-center justify-between mb-4\">\n          <div class=\"flex items-center space-x-3\">\n            <div class=\"w-12 h-12 rounded-full bg-white/20 flex items-center justify-center backdrop-blur-sm\">\n              <font-awesome-icon :icon=\"isSearchMode ? ['fas', 'search'] : ['fas', 'tag']\" class=\"text-lg\" />\n            </div>\n            <div>\n              <h2 class=\"text-xl font-bold drop-shadow-md\">{{ getSelectedCategoryName() }}</h2>\n              <p class=\"text-white/90 text-sm drop-shadow-md\">{{ getCategoryItemCount(selectedCategory) }} 件衣物</p>\n            </div>\n          </div>\n          <button @click=\"closeDrawer\" class=\"w-10 h-10 rounded-full bg-white/20 flex items-center justify-center backdrop-blur-sm hover:bg-white/30 transition-all duration-300 transform hover:scale-105 active:scale-95\">\n            <font-awesome-icon :icon=\"['fas', 'times']\" class=\"text-lg\" />\n          </button>\n        </div>\n\n        <!-- 筛选和排序栏 -->\n        <div class=\"flex space-x-2 overflow-x-auto pb-1 scrollbar-hide\">\n          <button class=\"px-4 py-2 bg-white/20 rounded-full text-sm whitespace-nowrap flex items-center space-x-1 hover:bg-white/30 transition-colors\">\n            <font-awesome-icon :icon=\"['fas', 'filter']\" class=\"text-xs\" />\n            <span>全部</span>\n          </button>\n          <button class=\"px-4 py-2 bg-white/20 rounded-full text-sm whitespace-nowrap flex items-center space-x-1 hover:bg-white/30 transition-colors\">\n            <font-awesome-icon :icon=\"['fas', 'fire']\" class=\"text-xs\" />\n            <span>最近穿过的</span>\n          </button>\n          <button class=\"px-4 py-2 bg-white/20 rounded-full text-sm whitespace-nowrap flex items-center space-x-1 hover:bg-white/30 transition-colors\">\n            <font-awesome-icon :icon=\"['fas', 'heart']\" class=\"text-xs\" />\n            <span>收藏的</span>\n          </button>\n          <button class=\"px-4 py-2 bg-white/20 rounded-full text-sm whitespace-nowrap flex items-center space-x-1 hover:bg-white/30 transition-colors\">\n            <font-awesome-icon :icon=\"['fas', 'sort-amount-down']\" class=\"text-xs\" />\n            <span>按时间</span>\n          </button>\n          <button class=\"px-4 py-2 bg-white/20 rounded-full text-sm whitespace-nowrap flex items-center space-x-1 hover:bg-white/30 transition-colors\">\n            <font-awesome-icon :icon=\"['fas', 'palette']\" class=\"text-xs\" />\n            <span>按颜色</span>\n          </button>\n        </div>\n      </div>\n\n      <!-- 内容区域 -->\n      <div class=\"flex-1 overflow-y-auto scrollbar-hide p-4\">\n        <!-- 有衣物时的展示 -->\n        <div v-if=\"getCategoryItems(selectedCategory).length > 0\" class=\"space-y-6\">\n          <!-- 网格视图 -->\n          <transition-group name=\"staggered-fade\" tag=\"div\" class=\"grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4\">\n            <div\n              v-for=\"(item, index) in getCategoryItems(selectedCategory)\"\n              :key=\"item.id\"\n              class=\"bg-white rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2 cursor-pointer group relative\"\n              @click=\"viewItemDetail(item)\"\n              :style=\"{ 'transition-delay': `${index * 50}ms` }\"\n            >\n              <div class=\"aspect-square overflow-hidden relative\">\n                <div class=\"absolute inset-0 bg-gradient-to-br from-transparent to-black/5 z-10\"></div>\n                <img\n                  :src=\"item.image || `https://picsum.photos/seed/${item.id}/300/300`\"\n                  :alt=\"item.name\"\n                  class=\"w-full h-full object-cover group-hover:scale-105 transition-transform duration-500\"\n                >\n                <!-- 悬停操作按钮 -->\n                <div class=\"absolute inset-0 bg-black/30 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300\">\n                  <div class=\"flex space-x-2\">\n                    <button @click.stop=\"toggleFavorite(item)\" class=\"bg-white rounded-full p-2 shadow-md hover:bg-gray-100 transition-colors\">\n                      <font-awesome-icon :icon=\"[item.favorite ? 'fas' : 'far', 'heart']\" :class=\"[item.favorite ? 'text-red-500' : 'text-gray-600']\" />\n                    </button>\n                    <button @click.stop=\"editItem(item)\" class=\"bg-white rounded-full p-2 shadow-md hover:bg-gray-100 transition-colors\">\n                      <font-awesome-icon :icon=\"['fas', 'edit']\" class=\"text-gray-600\" />\n                    </button>\n                    <button @click.stop=\"shareItem(item)\" class=\"bg-white rounded-full p-2 shadow-md hover:bg-gray-100 transition-colors\">\n                      <font-awesome-icon :icon=\"['fas', 'share-alt']\" class=\"text-gray-600\" />\n                    </button>\n                  </div>\n                </div>\n                <div v-if=\"item.favorite\" class=\"absolute top-2 left-2 animate-bounce-in\">\n                  <div class=\"w-8 h-8 rounded-full bg-red-500 flex items-center justify-center shadow-md\">\n                    <font-awesome-icon :icon=\"['fas', 'heart']\" class=\"text-white text-sm\" />\n                  </div>\n                </div>\n              </div>\n              <!-- 衣物信息 -->\n              <div class=\"p-3 bg-gradient-to-b from-white to-gray-50\">\n                <div class=\"flex justify-between items-start\">\n                  <h3 class=\"font-medium text-gray-900 truncate flex-1\">{{ item.name }}</h3>\n                  <span class=\"text-xs text-gray-500 ml-2\">{{ item.lastWorn || '未穿过' }}</span>\n                </div>\n                <div class=\"flex items-center mt-1\">\n                  <span class=\"inline-block w-3 h-3 rounded-full mr-1\" :style=\"{ backgroundColor: item.color || '#ccc' }\"></span>\n                  <span class=\"text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full mr-1\">{{ item.brand || '未分类' }}</span>\n                  <span class=\"text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full\">{{ item.season || '四季' }}</span>\n                </div>\n              </div>\n            </div>\n          </transition-group>\n        </div>\n\n        <!-- 空状态展示 -->\n        <transition name=\"fade-up\" appear>\n          <div v-if=\"getCategoryItems(selectedCategory).length === 0\" class=\"flex flex-col items-center justify-center h-full py-12 text-center px-4\">\n            <div class=\"relative mb-6 animate-float\">\n              <div class=\"w-24 h-24 rounded-full bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center mx-auto mb-4 shadow-lg\">\n                <font-awesome-icon :icon=\"['fas', 'tshirt']\" class=\"text-3xl text-primary animate-pulse-slow\" />\n              </div>\n              <div class=\"absolute -top-2 -right-2 w-10 h-10 rounded-full bg-yellow-400 flex items-center justify-center animate-ping-slow\">\n                <font-awesome-icon :icon=\"['fas', 'plus']\" class=\"text-white text-xs\" />\n              </div>\n            </div>\n            <h3 class=\"text-xl font-bold text-gray-800 mb-2\">暂无