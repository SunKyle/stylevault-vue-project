ef([])\nconst selectedCategory = ref(null)\nconst isDrawerOpen = ref(false)\n\n// 计算属性\nconst categories = computed(() => wardrobeStore.categories)\nconst recentlyAddedItems = computed(() => wardrobeStore.recentlyAddedItems)\n\n// 方法\nfunction initializeData() {\n  loading.value = true\n  error.value = null\n  \n  try {\n    wardrobeStore.fetchCategories()\n    wardrobeStore.fetchItems()\n  } catch (err) {\n    error.value = '加载数据失败，请重试'\n    console.error(err)\n  } finally {\n    loading.value = false\n  }\n}\n\nfunction handleSearch() {\n  if (!searchKeyword.value.trim()) {\n    isSearchMode.value = false\n    searchResults.value = []\n    return\n  }\n  \n  isSearchMode.value = true\n  searchResults.value = wardrobeStore.searchItems(searchKeyword.value)\n  selectedCategory.value = 'search'\n  isDrawerOpen.value = true\n}\n\nfunction viewCategory(categoryId) {\n  selectedCategory.value = categoryId\n  isSearchMode.value = false\n  isDrawerOpen.value = true\n}\n\nfunction closeDrawer() {\n  if (isSearchMode.value) {\n    isSearchMode.value = false\n    searchResults.value = []\n  } else {\n    wardrobeStore.clearSelectedCategory()\n  }\n  isDrawerOpen.value = false\n}\n\nfunction viewItemDetail(item) {\n  // 查看衣物详情的逻辑\n  console.log(\"查看衣物详情:\", item);\n  // 这里可以添加导航到详情页面的逻辑\n}\n\nfunction editItem(item) {\n  // 编辑衣物的逻辑\n  console.log(\"编辑衣物:\", item);\n  showToast(`编辑 ${item.name}`, 'info');\n  // 这里可以添加编辑衣物的逻辑\n}\n\nfunction shareItem(item) {\n  // 分享衣物的逻辑\n  console.log(\"分享衣物:\", item);\n  showToast(`分享 ${item.name}`, 'success');\n  // 这里可以添加分享衣物的逻辑\n}\n\nfunction viewAllCategories() {\n  // 查看所有分类的逻辑\n  console.log(\"查看所有分类\");\n  // 如果当前是搜索模式，先退出搜索模式\n  if (isSearchMode.value) {\n    isSearchMode.value = false;\n    searchResults.value = [];\n  }\n  // 设置一个特殊值表示查看全部\n  wardrobeStore.setSelectedCategory(\"all\");\n  isDrawerOpen.value = true;\n}\n\nfunction getCategoryItems(categoryId) {\n  if (isSearchMode.value) return searchResults.value;\n  if (categoryId === \"all\") {\n    // 计算所有分类的衣物总数\n    let totalCount = 0;\n    Object.values(wardrobeStore.itemsByCategory).forEach(items => {\n      totalCount += items.length;\n    });\n    return totalCount;\n  }\n  return wardrobeStore.itemsByCategory[categoryId]?.length || 0\n}\n\nfunction getCategoryItemCount(categoryId) {\n  if (isSearchMode.value) return searchResults.value.length;\n  if (categoryId === \"all\") {\n    // 计算所有分类的衣物总数\n    let totalCount = 0;\n    Object.values(wardrobeStore.itemsByCategory).forEach(items => {\n      totalCount += items.length;\n    });\n    return totalCount;\n  }\n  return wardrobeStore.itemsByCategory[categoryId]?.length || 0\n}\n\nfunction getSelectedCategoryName() {\n  if (isSearchMode.value) return '搜索结果'\n  if (selectedCategory.value === \"all\") return '全部衣物'\n  const category = categories.value.find(c => c.id === selectedCategory.value)\n  return category ? category.name : '未分类'\n}\n\nfunction toggleFavorite(item) {\n  wardrobeStore.toggleFavorite(item.id)\n  showToast(item.favorite ? '已取消收藏' : '已添加到收藏', 'success')\n}\n\n// 动画钩子\nfunction beforeEnter(el) {\n  console.log('进入动画开始: beforeEnter')\n}\n\nfunction afterEnter(el) {\n  console.log('进入动画结束: afterEnter')\n}\n\nfunction beforeLeave(el) {\n  console.log('离开动画开始: beforeLeave')\n}\n\nfunction afterLeave(el) {\n  console.log('离开动画结束: afterLeave')\n}\n\n// 生命周期\nonMounted(() => {\n  initializeData()\n})\n</script>\n\n<style scoped>\n.animate-fadeIn {\n  animation: fadeIn 0.5s ease-in-out;\n}\n\n@keyframes fadeIn {\n  from {\n    opacity: 0;\n    transform: translateY(10px);\n  }\n  to {\n    opacity: 1;\n    transform: translateY(0);\n  }\n}\n\n/* 过渡动画 */\n.fade-enter-active,\n.fade-leave-active {\n  transition: opacity 0.3s ease;\n}\n\n.fade-enter-from,\n.fade-leave-to {\n  opacity: 0;\n}\n\n.animated {\n  animation-duration: 1s;\n  animation-fill-mode: both;\n}\n\n.slide-up-enter-active {\n  animation-name: slideUpIn;\n  animation-duration: 0.4s;\n  animation-timing-function: c