{
  "name": "stylevault-inspiration-tests",
  "version": "1.0.0",
  "description": "灵感搭配页面自动化测试套件",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:inspiration": "vitest run test-inspiration-comprehensive.js",
    "test:e2e": "vitest run test-inspiration-e2e.js",
    "test:performance": "vitest run --reporter=verbose test-inspiration-comprehensive.js",
    "test:debug": "vitest run --reporter=verbose --no-coverage"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.1",
    "jsdom": "^23.0.1",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "@pinia/testing": "^0.1.3",
    "happy-dom": "^12.10.3"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "pinia": "^2.1.7"
  }
}