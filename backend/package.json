{
  "name": "stylevault-backend",
  "version": "1.0.0",
  "description": "StyleVault backend API server",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:test": "ts-node src/scripts/test-database.ts",
    "db:test-simple": "node src/scripts/test-db-simple.js",
    "db:check": "ts-node src/scripts/check-database-setup.ts",
    "db:setup": "node src/scripts/quick-setup-db.js",
    "db:init": "node src/scripts/init-db.js",
    "db:create": "mysql -h localhost -u root -p -e \"CREATE DATABASE IF NOT EXISTS stylevault CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;\"",
    "db:sync": "ts-node src/scripts/sync-database.ts",
    "init-db": "ts-node src/scripts/init-models.ts",
    "validate-models": "ts-node src/scripts/validate-models.ts",
    "quick-setup": "./scripts/quick-setup.sh",
    "check-env": "node -e \"console.log('Node:', process.version, 'Arch:', process.arch)\"",
    "db:init-full": "ts-node src/scripts/init-database.ts",
    "db:seed-categories": "ts-node src/scripts/seed-categories.ts",
    "db:init-categories": "node src/scripts/init-categories-simple.js",
    "db:init-categories-ts": "npx ts-node src/scripts/init-categories-final.ts"
  },
  "keywords": [
    "stylevault",
    "fashion",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "StyleVault Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.4",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sharp": "^0.33.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.20",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
